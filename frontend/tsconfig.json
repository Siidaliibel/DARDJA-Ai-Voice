{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["react", "react-dom", "node"],
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "./**/*.ts", "./**/*.tsx"]
}
